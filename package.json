{
    "name": "effekt",
    "displayName": "effekt",
    "description": "The Effekt language",
    "repository": {
        "type": "git",
        "url": "https://github.com/effekt-lang/effekt-vscode.git"
    },
    "version": "0.1.5",
    "publisher": "b-studios",
    "engines": {
        "vscode": "^1.59.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:effekt",
        "onLanguage:markdown"
    ],
    "main": "./out/extension",
    "contributes": {
        "languages": [
            {
                "id": "effekt",
                "extensions": [
                    ".eff",
                    ".effekt"
                ],
                "aliases": [
                    "Effekt",
                    "effekt"
                ],
                "configuration": "./language-configuration.json"
            },
            {
                "id": "markdown",
                "extensions": [
                    ".md"
                ],
                "aliases": [
                    "markdown"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "effekt",
                "scopeName": "source.effekt",
                "path": "./syntaxes/effekt.tmLanguage.json"
            },
            {
                "language": "markdown",
                "scopeName": "source.markdown",
                "path": "./syntaxes/literateeffekt.tmLanguage.json"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Effekt",
            "properties": {
                "effekt.executable": {
                    "type": "string",
                    "description": "Path to the effekt executable (you need to restart vscode after changing this setting)."
                },
                "effekt.showExplanations": {
                    "type": "boolean",
                    "default": true,
                    "description": "Display additional information when hovering over identifier."
                },
                "effekt.enableCodeLenses": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable code lenses for effekt files."
                },
                "effekt.showTarget": {
                    "type": "boolean",
                    "default": false,
                    "description": "Show the generated JavaScript."
                },
                "effekt.showCore": {
                    "type": "boolean",
                    "default": false,
                    "description": "Show the translated Core (System Îž)."
                },
                "effekt.remoteDebug": {
                    "type": "boolean",
                    "default": false,
                    "description": "Start effekt server in debug mode and remotely connect to it."
                },
                "effekt.remoteDebugPort": {
                    "type": "integer",
                    "default": 5007,
                    "description": "Port of the remote effekt server."
                },
                "effekt.commands": {
                    "type": "array",
                    "default": [
                        "println"
                    ]
                },
                "effekt.internal.showOutput": {
                    "type": "boolean",
                    "default": false,
                    "description": "Show output of effekt commands."
                },
                "effekt.internal.testSetting": {
                    "type": "boolean",
                    "default": true,
                    "description": "Just a demo setting."
                }
            }
        },
        "commands": [
            {
                "category": "Effekt",
                "command": "effekt.startClient",
                "title": "Start the effect language client"
            },
            {
                "category": "Effekt",
                "command": "effekt.stopClient",
                "title": "Stop the effect language client"
            },
            {
                "category": "Effekt",
                "command": "effekt.selectLinkedEditors",
                "title": "Focus Product Editors"
            }
        ],
        "keybindings": [
            {
                "command": "effekt.selectLinkedEditors",
                "key": "ctrl+alt+p",
                "mac": "cmd+alt+p",
                "when": "editorTextFocus && editorLangId == 'effekt'"
            }
        ],
        "menus": {
            "editor/context": []
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile",
        "test": "node ./out/test/runTest.js"
    },
    "dependencies": {
        "vscode-languageclient": "^5.2.1",
        "@vscode/test-electron": "1.6.2"
    },
    "devDependencies": {
        "@types/mocha": "^9.0.0",
        "@types/node": "^7.0.43",
        "@types/vscode": "^1.59.0",
        "tslint": "^5.8.0",
        "typescript": "^4.3.5",
        "@types/glob": "^7.1.4"
    }
}
