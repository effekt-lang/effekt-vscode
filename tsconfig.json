{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "out",
        "lib": [
            "es6",
            "es2022",
            "dom"
        ],
        "sourceMap": true,
        "rootDir": "src",
        /* Strict Type-Checking Option */
        "strict": true,
        /* Additional Checks */
        "noUnusedLocals": false
    },
    "include": ["src/**/*", "assets/**/*"],
    "exclude": [
        "node_modules",
        ".vscode-test"
    ]
}