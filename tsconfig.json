{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "out",
    "lib": ["es6"],
    "sourceMap": true,
    "rootDir": "src",
    /* Strict Type-Checking Option */
    "strict": true,
    /* Additional Checks */
    "noUnusedLocals": true,
    /* Allow importing ES modules */
    "esModuleInterop": true,
  },
  "exclude": ["node_modules", ".vscode-test"]
}
